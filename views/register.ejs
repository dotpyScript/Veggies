<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Veggis | Register</title>
  <!-- Add to <head> -->
  <link rel="preload" href="/logins/img/img1.jpg" as="image">
  <link rel="stylesheet" href="/css/login_register.css">
  <link rel="stylesheet" href="/toast_alert.css">
  <!-- Flowbite for additional components -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />

  <!-- Animate.css for animations -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <!-- Tailwind CSS -->
  <!-- <script src="https://cdn.tailwindcss.com"></script> -->


  <!-- Custom CSS for optimization and theming -->
  <style>
    :root {
      --primary-color: #8bc34a;
      --primary-color-hover: #688b40;

    }

    /* 
    input:focus {
      border: 2px solid var(--primary-color) !important;
    } */

    #submit_btn {
      background-color: var(--primary-color);
      transition: 1s;
    }

    #submit_btn:hover {
      background-color: var(--primary-color-hover);
      transition: 1s;
    }


    @keyframes cloudMove {
      from {
        transform: translateX(-100px);
      }

      to {
        transform: translateX(600px);
      }
    }

    @keyframes sunMove {
      0% {
        cy: 100;
      }

      50% {
        cy: 150;
      }

      100% {
        cy: 100;
      }
    }

    @media (max-width: 768px) {
      body {
        padding: 0;
      }

      .container {
        width: 100%;
        padding: 0;
      }

      .grid {
        grid-template-columns: 1fr;
        box-shadow: none;
      }
    }

    @media (max-width: 1024px) {
      svg {
        max-height: 250px;
      }
    }

    .focus-primary:focus {
      border-color: var(--primary-color);
    }

    svg circle:hover {
      transform: scale(1.1);
      transition: transform 0.3s ease;
    }

    .absolute.inset-0 h2,
    .absolute.inset-0 p {
      position: relative;
    }

    .absolute.inset-0 h2::after,
    .absolute.inset-0 p::after {
      content: '|';
      animation: blink 0.7s infinite;
      display: inline-block;
      margin-left: 3px;
      opacity: 1;
      color: white;
    }

    @keyframes blink {

      0%,
      100% {
        opacity: 1;
      }

      50% {
        opacity: 0;
      }
    }
  </style>
</head>

<body
  class="bg-gradient-to-br from-green-50 via-green-100 to-green-50 min-h-screen flex items-center justify-center p-6">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 bg-white shadow-2xl rounded-2xl overflow-hidden ">
      <!-- Left Side Image -->
      <div class="hidden md:block relative lg:w-full">
        <img src="/logins/img/img1.jpg" alt="Vegetable Market" class="w-full h-full object-cover" width="1000"
          height="800" loading="lazy" />
        <div class="absolute inset-0 bg-green-900 opacity-40"></div>
        <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center p-8">
          <h2 class="text-4xl font-bold mb-4 drop-shadow-lg">Welcome to Veggis</h2>
          <p class="text-xl drop-shadow-md max-w-md text-center">
            Manage Your Agricultural Products Efficiently
          </p>
        </div>
      </div>


      <!-- Right Side: Registration Form -->
      <div class="w-full p-8 lg:p-12 flex items-center justify-center">
        <div class="w-full max-w-md">
          <form id="registrationForm" class="space-y-6" novalidate>
            <div class="text-center">
              <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-green-800 mb-2">
                Create Veggis Account
              </h2>
              <p class="text-slate-500">Start your agricultural management journey</p>
            </div>

            <!-- Social Login Options -->
            <div class="flex justify-center space-x-4">
              <button type="button"
                class="bg-red-500 text-white p-3 rounded-full hover:bg-red-600 transition google-signin"
                aria-label="Sign up with Google">
                <i class="ri-google-fill text-xl"></i>
              </button>
              <button type="button" class="bg-green-600 text-white p-3 rounded-full hover:bg-green-700 transition"
                aria-label="Sign up with Plant Network">
                <i class="ri-plant-line text-xl"></i>
              </button>
              <button type="button"
                class="bg-blue-600 text-white p-3 rounded-full hover:bg-blue-700 transition facebook-signin"
                aria-label="Sign up with Facebook">
                <i class="ri-facebook-fill text-xl"></i>
              </button>
            </div>

            <div class="flex items-center justify-center my-4">
              <hr class="border-slate-300 w-full">
              <span class="px-3 text-slate-500">OR</span>
              <hr class="border-slate-300 w-full">
            </div>

            <!-- Registration Fields -->
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-slate-700 mb-2">First Name</label>
                <input type="text" placeholder="Farmer" id="firstName" name="firstName" required
                  class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-green-500 transition focus-primary">
              </div>
              <div>
                <label class="block text-slate-700 mb-2">Last Name</label>
                <input type="text" placeholder="Green" id="lastName" name="lastName" required
                  class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 transition focus-primary">
              </div>
            </div>

            <div>
              <label class="block text-slate-700 mb-2">Farm/Business Email</label>
              <input type="email" placeholder="farmer@veggis.com" id="email" name="email" required
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 transition focus-primary">
            </div>

            <div>
              <label class="block text-slate-700 mb-2">Password</label>
              <div class="relative">
                <input type="password" id="password" placeholder="Secure agricultural password" name="password" required
                  id="password"
                  class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 transition focus-primary">
                <button type="button" id="togglePassword" class="absolute right-3 top-3 text-green-500"
                  aria-label="Toggle password visibility">
                  <i class="ri-eye-line"></i>
                </button>
              </div>
            </div>

            <div>
              <label class="flex items-center">
                <input type="checkbox" required class="mr-2 text-slate-700 focus:ring-green-500">
                <span class="">I agree to the
                  <a href="#" class="text-green-700 hover:underline">Veggis Terms & Conditions</a>
                </span>
              </label>
            </div>

            <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg" id="submit_btn">
              Create Veggis Account
            </button>

            <div class="text-center">
              <p class="text-slate-700">
                Already a Veggis farmer?
                <a href="login" class="text-green-700 hover:underline">Login</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript -->
  <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script> -->
  <script src="/flowbite.min.js"></script>
  <script src="/toast_alert.js"></script>
  <script src="/register.js"></script>
