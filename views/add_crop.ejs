<%- include('partials/_head') %>
  </head>

  <body class="with-welcome-text">
    <div class="container-scroller">
      <%- include('partials/_navbar') %>

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
          <!-- partial:partials/_sidebar.html -->

          <%- include('partials/_sidebar') %>
            <!-- partial -->

            <div class="main-panel">
              <div class="content-wrapper">
                <div class="row">
                  <div class="col-sm-12">

                    <div class="schedule-container">
                      <div class="schedule-card">
                        <div class="schedule-header">
                          <h2>Crops & Land Information</h2>
                        </div>
                        <form>
                          <p class="card-description form_title"> Crop Information </p>
                          <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Crop Variety</label>
                                <input type="number" name="crop_variety" id="crop_variety"
                                  class="form-control todo-Input" placeholder="Platinum F1 Variety">
                              </div>
                            </div>

                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Date</label>
                                <input type="date" name="plotSize" id="plotSize" class="form-control todo-Input"
                                  placeholder="Enter size">
                              </div>
                            </div>
                          </div>

                          <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Expected Harvest</label>
                                <div>
                                  <input type="date" class="form-control todo-Input" name="expected_harvest"
                                    id="expected_harvest">
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Fartilizers</label>
                                <div>
                                  <input type="text" class="form-control todo-Input" name="fartilizer" id="fartilizer">
                                </div>
                              </div>
                            </div>
                          </div>

                          <div class=" row mb-4">
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label for="dropdownMenuSizeButton2">Category</label>
                                <button class="btn dropdown-toggle text-start dropdown-btn w-100" type="button"
                                  id="dropdownMenuSizeButton2" data-bs-toggle="dropdown" aria-haspopup="true"
                                  aria-expanded="false">Choose Category</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton2">
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton2').innerText = 'Vegetables'">
                                    Vegitables
                                  </div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton2').innerText = 'Beverages'">
                                    Beverages
                                  </div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton2').innerText = 'Perenial Crops'">
                                    Perenial Crops</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton2').innerText = 'Cash Crops'">
                                    Cash Crops</div>
                                </div>
                              </div>
                            </div>

                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label for="dropdownMenuSizeButton3">Crop Stage</label>
                                <button class="btn dropdown-toggle text-start dropdown-btn w-100" type="button"
                                  id="dropdownMenuSizeButton3" data-bs-toggle="dropdown" aria-haspopup="true"
                                  aria-expanded="false">Choose Crop Stage</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton3">
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton3').innerText = 'Seedling'">
                                    Seedling</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton3').innerText = 'Vegitative'">
                                    Vegitative</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton3').innerText = 'Flowering'">
                                    Flowering</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton3').innerText = 'Harvest-ready'">
                                    Harvest-ready</div>
                                </div>
                              </div>
                            </div>
                          </div>

                          <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Quantity</label>
                                <div>
                                  <input type="text" class="form-control todo-Input" name="quantity" id="quantity">
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Cost</label>
                                <div>
                                  <input type="text" class="form-control todo-Input" name="cost" id="cost">
                                </div>
                              </div>
                            </div>
                          </div>

                          <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>Pest Control</label>
                                <div>
                                  <input type="text" class="form-control todo-Input" name="pest_control3"
                                    id="pest_control">
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label>comments...</label>
                                <div>
                                  <textarea class="form-control todo-Input" name="comments" id="comments"
                                    placeholder="comments..."></textarea>
                                </div>
                              </div>
                            </div>
                          </div>
                          <p class="card-description form_title"> Land Information </p>

                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-group">
                                <label>Plot Name</label>
                                <div>
                                  <input type="text" class="form-control todo-Input" placeholder="Farm A" />
                                </div>
                              </div>
                            </div>

                            <div class="col-md-6 mb-3">
                              <div class="form-group">
                                <label for="dropdownMenuSizeButton4">Soil Type</label>
                                <button class="btn dropdown-toggle text-start dropdown-btn w-100" type="button"
                                  id="dropdownMenuSizeButton4" data-bs-toggle="dropdown" aria-haspopup="true"
                                  aria-expanded="false">Choose Soil Type</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton4">
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton4').innerText = 'Loamy'">
                                    Loamy</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton4').innerText = 'Sandy'">
                                    Sandy</div>
                                  <div class="dropdown-item"
                                    onclick="document.getElementById('dropdownMenuSizeButton4').innerText = 'Clay'">
                                    CLay</div>
                                </div>
                              </div>
                            </div>
                          </div>

                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-sm-3">Size</label>
                                <div>
                                  <input class="form-control todo-Input" placeholder="6 plots"> </input>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                <label>Comments</label>
                                <div>
                                  <textarea class="form-control todo-Input"
                                    placeholder="last Crop planted on the Land"> </textarea>
                                </div>
                              </div>
                            </div>
                          </div>

                          <div class="text-center">
                            <button type="submit" class="btn btn-schedule">Submit</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <%- include('partials/_footer') %>

          <!-- _script -->
          <%- include('partials/_script') %>