  <script>
    // Wait for the document to be fully loaded
    document.addEventListener('DOMContentLoaded', function () {
      const dayCheckboxes = document.querySelectorAll('.day-checkbox');
      const everydayCheckbox = document.getElementById('everyday');
      const individualDays = Array.from(dayCheckboxes).filter(checkbox => checkbox.id !== 'everyday');

      everydayCheckbox.addEventListener('change', function () {
        individualDays.forEach(checkbox => {
          checkbox.checked = this.checked;
          checkbox.disabled = this.checked;
          const label = document.querySelector(`label[for="${checkbox.id}"]`);
          label.style.opacity = this.checked ? '0.7' : '1';
        });
      });

      individualDays.forEach(checkbox => {
        checkbox.addEventListener('change', function () {
          const allChecked = individualDays.every(day => day.checked);
          everydayCheckbox.checked = allChecked;
        });
      });

      const scheduleForm = document.querySelector('form');
      scheduleForm.addEventListener('submit', function (e) {
        e.preventDefault();
        clearErrors(); // Clear previous error messages

        const formData = {
          cropType: document.querySelector('#dropdownMenuSizeButton1').innerText,
          plotSize: document.querySelector('input[name="plotSize"]').value,
          selectedDays: Array.from(dayCheckboxes).filter(checkbox => checkbox.checked).map(checkbox => checkbox.id),
          startTime: document.querySelector('input[name="startTime"]').value,
          endTime: document.querySelector('input[name="endTime"]').value,
          frequency: document.querySelector('#dropdownMenuSizeButton2').innerText,
          reminder: document.querySelector('#dropdownMenuSizeButton3').innerText
        };

        let isValid = true;

        // Validation for each field
        if (formData.cropType === 'Crop Variety') {
          showError('dropdownMenuSizeButton1', 'Please select a crop type');
          isValid = false;
        }
        if (!formData.plotSize) {
          showError('plotSize', 'Please enter plot size');
          isValid = false;
        }
        if (formData.selectedDays.length === 0) {
          showError('day-selection', 'Please select at least one day for irrigation');
          isValid = false;
        }
        if (!formData.startTime || !formData.endTime || formData.startTime >= formData.endTime) {
          showError('startTime', 'Start and end times are required, and end time must be after start time');
          isValid = false;
        }
        if (formData.frequency === 'Frequency') {
          showError('dropdownMenuSizeButton2', 'Please select a frequency');
          isValid = false;
        }
        if (formData.reminder === 'Choose Reminder Time') {
          showError('dropdownMenuSizeButton3', 'Please select a reminder time');
          isValid = false;
        }

        if (isValid) {
          console.log('Form Data:', formData);
          // Submit the form or send data to backend
        } else {
          document.querySelector('.input-error').focus();
        }
      });

      // Error display functions
      function showError(id, message) {
        const inputElement = document.getElementById(id) || document.querySelector(`input[name="${id}"]`);
        inputElement.classList.add('input-error');
        inputElement.style.borderColor = 'red';

        const errorElement = document.createElement('small');
        errorElement.className = 'error-message';
        errorElement.textContent = message;

        inputElement.closest('.form-group').appendChild(errorElement);
      }

      function clearErrors() {
        document.querySelectorAll('.input-error').forEach(el => {
          el.classList.remove('input-error');
          el.style.borderColor = '';
        });
        document.querySelectorAll('.error-message').forEach(el => el.remove());
      }
    });
  </script>
