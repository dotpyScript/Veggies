    :root {
      --primary-color: #8bc34a;
      --secondary-color: #3498db;
      --background-color: #f8f9fa;
      --card-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    body {
      background-color: var(--background-color);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .schedule-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 2rem;
    }

    .schedule-card {
      background: white;
      border-radius: 20px;
      box-shadow: var(--card-shadow);
      padding: 2.5rem;
      margin-bottom: 2rem;
      transition: transform 0.3s ease;
    }

    .schedule-card:hover {
      transform: translateY(-5px);
    }

    .schedule-header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
      padding-bottom: 1rem;
    }

    .schedule-header:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
      border-radius: 2px;
    }

    .schedule-header h2 {
      font-size: 2.5rem;
      color: #2c3e50;
      font-weight: 600;
    }

    .form-group label {
      font-weight: 500;
      color: #34495e;
      margin-bottom: 0.5rem;
    }

    .form-control {
      border-radius: 10px;
      border: 2px solid #e0e0e0;
      padding: 0.75rem 1rem;
      transition: all 0.3s ease;
    }

    .todo-Input:focus {
      border: 1px solid #8bc34a !important;
    }

    /*
    .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.2rem rgba(46, 204, 113, 0.25);
    }
*/
    .day-select-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1rem;
      padding: 1.5rem;
      background: #f8f9fa;
      border-radius: 15px;
      border: 2px solid #e0e0e0;
    }


    .day-checkbox {
      display: none;
    }

    .day-label {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1rem;
      background: white;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .day-checkbox:checked+.day-label {
      background: var(--primary-color);
      color: white;
      border-color: var(--primary-color);
      transform: scale(1.05);
    }

    .time-input {
      position: relative;
    }

    .time-input i {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #7f8c8d;
    }

    .btn-schedule {
      background: #8bc34a;
      /* linear-gradient(to right, var(--primary-color), var(--secondary-color)); */
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
      margin-top: 2rem;
    }

    .btn-schedule:hover {
      transform: translateY(-3px);
      border: 2px solid #8bc34a;
      background-color: #d7e4d6;
      box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
    }

    .dropdown-btn {
      width: 100%;
      border: 1px solid #e4e4e3;
      /* background-color: #8bc34a; */
    }

    .dropdown-btn:hover {
      /* background-color: #8bc34a; */
      border: 1px solid #e4e4e3;
      transition: ease 0.3s;
      /* color: #fff; */
    }

    .dropdown-btn:focus {
      border: 1px solid #5c9719;
    }

    .dropdown-header {
      font-weight: 600;
    }

    .dropdown-item:hover {
      background-color: #8bc34a;
      color: #fff;
    }

    .dropdown-menu {
      border: 1px solid #8bc34a;
    }

    @media (max-width: 768px) {
      .schedule-container {
        padding: 1rem;
      }

      .schedule-card {
